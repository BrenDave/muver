<span><h1><i class="fas fa-city"></i> My Jobs</h1></span>

<div class='job-requested'>
  <h3>Requested Jobs</h3>
  <div>
    <% @requested.map do |p| %>
      <div>
      <%= "You requested to help #{p.listing.user.first_name}!" %>
      <div class='btn-group btn'>
        <%= link_to 'See listing', listing_path(p.listing.id), class: 'btn btn-primary'  %>
      </div>
    <% end %>
      </div>
  </div>
</div>

<div class='job-approved'>
  <h3>Approved Jobs</h3>
  <div>
    <% @approved.map do |p| %>
    <div>
    <%= "You were approved to help #{p.listing.user.first_name}!" %>
    <div class='btn-group btn'>
      <%= link_to 'See listing', listing_path(p.listing.id), class:'btn btn-primary'  %>
    </div>
    <% end %>
  </div>
</div>

<hr>

<div class='btn-group btn-light ml-0'>
  <%= link_to 'Find more Jobs', guests_path, class: 'btn' %>
</div>

<div class="job-container">
<%= image_tag "movebx.png", class: 'job_pic'%>
<%= image_tag "city.jpg", class: 'job_pic'%>
<%= image_tag "keys.jpg", class: 'job_pic'%>
<%= image_tag "driver.jpg", class: 'job_pic'%>
</div>
