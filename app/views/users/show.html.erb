<h1><%= "#{@user.first_name || @user.email}'s Profile " %></h1>

<%= image_tag @user.avatar, class: "profile-pic" if @user.avatar.attached? %>

<% if current_user.id == params[:id].to_i %>
  <div>
    <%= link_to "Add Profile Picture", user_avatar_path, class: "btn btn-primary" %>
  </div>
<% end %>

<%= @user.email %>

<% if current_user.id == params[:id].to_i %>
  <div>
    <%= link_to "Edit Your Profile!", edit_user_registration_path, class: "btn btn-primary" %>
  </div>
<% end %>
