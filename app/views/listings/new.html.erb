<h1>Post Your Move Dawg!</h1>

<%= form_with(model: @listing) do |form|%>
  <div class="form-group">
    <%= form.label(:description, "Listing Description:") %>
    <%= form.text_field(:description) %>
  </div>
  <div class="form-group">
    <%= form.label(:starting_address, "Starting Address:") %>
    <%= form.text_field(:starting_address) %>
  </div>
  <div class="form-group">
    <%= form.label(:ending_address, "Ending Address:") %>
    <%= form.text_field(:ending_address) %>
  </div>
  <div class="form-group">
    <%= form.label(:price, "Price:") %>
    <%= form.text_field(:price) %>
  </div>
  <div class="form-group">
    <%= form.label(:difficulty, "Difficulty:") %>
    <%= form.text_field(:difficulty) %>
  </div>
  <div class="form-group">
    <%= form.label(:date, "Date:") %>
    <%= form.text_field(:date) %>
  </div>
  <div class="form-group">
    <%= form.label(:time, "Time:") %>
    <%= form.text_field(:time) %>
  </div>
  <div class="form-group">
    <%= form.label(:contact, "Contact Info:") %>
    <%= form.text_field(:contact) %>
  </div>
  <div class="form-group">
    <%= form.label(:stairs, "Stairs:") %>
    <%= form.text_field(:stairs) %>
  </div>
  <div class="form-group">
    <%= form.label(:max_people, "Max People:") %>
    <%= form.text_field(:max_people) %>
  </div>
  <div class="actions">
    <%= form.submit("Post") %>
  </div>
<% end %>

<hr>

<%= link_to "View Listings", listings_path %>
