<h1>Post Your Move Dawg!</h1>

<div class="form"><%= form_with(model: @listing) do |form|%>
  <div class="form-group">
    <%= form.label(:description, "Listing Description:") %>
    <%= form.text_field(:description) %>
  </div>
  <div class="form-group">
    <%= form.label(:starting_address, "Pick Up Location:") %>
    <%= form.text_field(:starting_address, :placeholder => 'Address') %>
  <div class="form-group">
    <%= form.label(:ending_address, "Drop Off Location:") %>
    <%= form.text_field(:ending_address, :placeholder => 'Address') %>
  </div>
  <div class="form-group">
    <%= form.label(:price, "Price: $") %>
    <%= form.number_field(:price, in: 1.0..10000.0, step: 1.0) %>
  </div>
  <div class="form-group">
    <%= form.label(:difficulty, "Difficulty:") %>
    <%= form.select(:difficulty, ["Easy (Less than 5 pounds)","Normal (Less than 20 pounds)","Hard (Over 20 pounds)"]) %>
  </div>
  <div class="form-group">
    <%= form.label(:date, "Date:") %>
    <%= form.date_field(:date) %>
  </div>
  <div class="form-group">
    <%= form.label(:time, "Time:") %>
    <%= form.time_field(:time) %>
  </div>
  <div class="form-group">
    <%= form.label(:contact, "Contact Email:") %>
    <%= form.email_field(:contact) %>
  </div>
  <div class="form-group">
    <%= form.label(:stairs, "Stairs:") %>
    <%= form.select(:stairs, ["Yes","No"]) %>
  </div>
  <div class="form-group">
    <%= form.label(:max_people, "Max People:") %>
    <%= form.number_field(:max_people, in: 1.0..100.0, step: 1.0) %>
  </div>
  <div class="actions">
    <%= form.submit("Post") %>
  </div>
<% end %>
</div>

<hr>

<%= link_to "View Listings", listings_path %>
